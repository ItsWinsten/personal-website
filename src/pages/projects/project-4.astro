---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';

const breadcrumbs = [
  { name: '/', url: base, clickable: false },
  { name: 'Projects', url: `${base}projects/` },
  { name: 'Project 4', url: `${base}projects/project-4/` }
];
---

<BaseLayout title="Project 4" breadcrumbs={breadcrumbs}>
  <div class="page">
    <article class="project-detail">
      <header class="project-header">
        <h1>Project 4</h1>
        <div class="project-meta">
          <span class="status-badge status-planned">Planned</span>
          <span class="project-category">Research Tools</span>
        </div>
      </header>

      <section class="project-section">
        <h2>Overview</h2>
        <p>
          Project description coming soon. This project is currently in the planning phase.
        </p>
      </section>

      <div class="back-link">
        <a href={`${base}projects/`}>‚Üê Back to Projects</a>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }

  .project-detail {
    padding: 1rem 0;
  }

  .project-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--accent);
  }

  .project-header h1 {
    margin: 0 0 1rem 0;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 3px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--accent);
    color: var(--accent);
  }

  .status-planned {
    background: rgba(128, 128, 128, 0.1);
  }

  .project-category {
    color: var(--gray);
    font-size: 0.9rem;
  }

  .project-section {
    margin-bottom: 2rem;
  }

  .project-section h2 {
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .back-link {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px dashed var(--accent);
  }

  .back-link a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
