---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';

const breadcrumbs = [
  { name: '/', url: base, clickable: false },
  { name: 'Projects', url: `${base}projects/` },
  { name: 'Project 1', url: `${base}projects/project-1/` }
];
---

<BaseLayout title="Project 1" breadcrumbs={breadcrumbs}>
  <div class="page">
    <article class="project-detail">
      <header class="project-header">
        <h1>Project 1</h1>
        <div class="project-meta">
          <span class="status-badge status-in-progress">In Progress</span>
          <span class="project-category">Web Development</span>
        </div>
      </header>

      <section class="project-section">
        <h2>Overview</h2>
        <p>
          This is a detailed description of Project 1. Add more information about what this project does,
          why it was created, and what problems it solves.
        </p>
      </section>

      <section class="project-section">
        <h2>Technologies Used</h2>
        <ul>
          <li>Technology 1</li>
          <li>Technology 2</li>
          <li>Technology 3</li>
        </ul>
      </section>

      <section class="project-section">
        <h2>Features</h2>
        <ul>
          <li>Feature 1</li>
          <li>Feature 2</li>
          <li>Feature 3</li>
        </ul>
      </section>

      <section class="project-section">
        <h2>Links</h2>
        <div class="project-links">
          <a href="https://github.com/ItsWinsten" target="_blank" rel="noopener noreferrer" class="button">
            View on GitHub
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer" class="button">
            Live Demo
          </a>
        </div>
      </section>

      <div class="back-link">
        <a href={`${base}projects/`}>‚Üê Back to Projects</a>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }

  .project-detail {
    padding: 1rem 0;
  }

  .project-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--accent);
  }

  .project-header h1 {
    margin: 0 0 1rem 0;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 3px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--accent);
    color: var(--accent);
  }

  .status-in-progress {
    background: rgba(255, 165, 0, 0.1);
  }

  .status-planned {
    background: rgba(128, 128, 128, 0.1);
  }

  .status-completed {
    background: rgba(0, 255, 0, 0.1);
  }

  .project-category {
    color: var(--gray);
    font-size: 0.9rem;
  }

  .project-section {
    margin-bottom: 2rem;
  }

  .project-section h2 {
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .project-section ul {
    margin-left: 1.5rem;
    line-height: 1.8;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: var(--background);
    text-decoration: none;
    font-weight: 500;
    border: 2px solid var(--accent);
    transition: all 0.2s;
  }

  .button:hover {
    background: var(--background);
    color: var(--accent);
  }

  .back-link {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px dashed var(--accent);
  }

  .back-link a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
